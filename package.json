{
  "name": "virtualdeck",
  "version": "1.0.0",
  "description": "A virtual deck application built with Electron",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "dist": "electron-builder",
  "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "virtual",
    "deck",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.virtualdeck.app",
    "productName": "VirtualDeck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "config.json",
  "public/**/*",
  "TwitchConnected/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": []
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/VD.gif",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VirtualDeck"
    }
  },
  "dependencies": {
    "extract-file-icon": "^0.3.2",
    "fs-extra": "^11.3.0",
    "tmi.js": "^1.8.5",
    "windows-shortcuts": "^0.1.6"
  }
}
